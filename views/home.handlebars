<head>
    <link rel='stylesheet' type='text/css' media='screen' href='/main.css'>
</head>

    <div id="header">
        <a href="/" style="float: left;">Sair</a>
        <h2>Reclame Ali</h2>
    </div>
    <div id="main">
        <div id="left-bar">
            <h2 style="color: white;">Menu</h2>
            <div id="list-itens">
                
                    Home<br><hr>
                    Dashboard<br><hr>
                    Histórico<br><hr>
                    Relatórios<br><hr>
                    Equipes<br><hr>
                    Monitoramento<br>
                
            </div>
        </div>
        <div id="dashboard">
            <h2 style="color: white; text-align: center">Dashboard</h2><hr>
            <div id="reclamacao-container ">
                <div class="card-content">
                    {{#each results}}
                        <div class="reclamacao-container">
                            <div class="header-reclamacao">
                                <h2>{{tipoReclamacao}}</h2>
                            </div>
                                <div class="content-reclamacao">
                                    <p>Prioridade associada: {{prioridadeAssociada}}</p>
                                    <p>CEP: {{local.cep}}</p>
                                    <p>Complemento: {{local.complemento}}</p>
                                    <p>Id: {{_id}}</p>
                                    <form action="/reclamacao/deletar" method="POST">
                                        <input type="hidden" name="id" value="{{_id}}">
                                        <button type="submit" style="justify-content: end;">Deletar</button>
                                    </form>
                                </div>
                            </div>
                            {{else}}
                                    <h4 style="text-align: center; color: white">Nenhuma reclamação registrada</h4>
                        {{/each}}
                        
                    </div>
                </div>
            </div>
            <br>
            </div>
        </div>
    </div>
